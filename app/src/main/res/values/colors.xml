<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Primary colors -->
    <color name="primary">#1A1A1A</color>          <!-- Toolbar, top bar (Deep Black) -->
    <color name="primary_variant">#C2185B</color> <!-- Darker shade for highlights (Dark Pink Accent) -->
    <color name="secondary">#E91E63</color>       <!-- Accent color, buttons (Light Pink Accent) -->

    <!-- Background & text -->
    <color name="background">#1A1A1A</color>      <!-- Editor background (Deep Black) -->
    <color name="surface">#2C2C2C</color>         <!-- Card or panel backgrounds (Grey Background) -->
    <color name="text_primary">#FFFFFF</color>    <!-- Main text color (White Text) -->
    <color name="text_secondary">#AAAAAA</color>  <!-- Subtext, hints (Grey Text) -->

    <!-- Syntax highlighting colors -->
    <color name="syntax_keyword">#CC7832</color>  <!-- Keywords like fun, class (Kotlin Keyword Orange) -->
    <color name="syntax_string">#6A8759</color>   <!-- String literals (Kotlin String Green) -->
    <color name="syntax_comment">#808080</color>  <!-- Comments (Kotlin Comment Grey) -->
    <color name="syntax_number">#6897BB</color>   <!-- Numbers (Kotlin Number Blue) -->

    <!-- Optional: undo/redo or selection highlights -->
    <color name="highlight">#E91E63</color>       <!-- Selection or highlighted line (Light Pink Accent) -->

    <!-- Standard black & white -->
    <color name="black">#000000</color>
    <color name="white">#FFFFFF</color>

    <!-- Error and Success colors -->
    <color name="error_red">#D50000</color>
    <color name="success_green">#00C853</color>
    <color name="LightPinkAccent">#D70695</color>
</resources>
